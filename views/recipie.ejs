<%- include('html-header') %>

<%- include('header') %>

<%- include('alert') %>

<main>

    <h1 class="text-center text-secondary display-1 d-none d-md-block m-5"><%= recipie.name %></h1>
    <h1 class="text-center text-secondary d-block d-md-none m-5"><%= recipie.name %></h1>

    <div class="row m-0">

        <% if (author) { %>
            <div class="col-12 my-4 py-3 px-5">
                <div class="row text-center">
                    <div class="col-6">
                        <a class="nav-link btn btn-lg btn-outline-dark text-dark m-2 btn-menu"
                           href=<%= `/recipies/${recipie.id}/edit` %>>Edit</a>
                    </div>
                    <div class="col-6">
                        <a class="nav-link btn btn-lg btn-outline-danger text-danger m-2 btn-menu"
                           href=<%= `/recipies/${recipie.id}/delete` %>>Delete</a>
                    </div>
                </div>
            </div>
        <% } %>

        <img class="img-fluid d-none d-md-block p-0" src=<%= `/images/${recipie.id}.jpg` %> >

        <div class="col-12 bg-dark text-light my-4 p-3">
            <div class="row text-center">
                <span class="col-6 h4"><%= `Elkészítési idő: ${recipie.time}` %></span>
                <span class="col-6 h4"><%= `Nehézség: ${recipie.difficulty}/5` %></span>
            </div>
        </div>

        <div class="col-12 col-md-8 offset-0 offset-md-2 text-secondary my-4 p-3">
            <p><%= recipie.description %></p>
        </div>

        <div class="col-lg-12 text-center mb-5">
            <div id="rating" class="text-danger display-3">
                <span class="far fa-heart" data-rating="1"></span>
                <span class="far fa-heart" data-rating="2"></span>
                <span class="far fa-heart" data-rating="3"></span>
                <span class="far fa-heart" data-rating="4"></span>
                <span class="far fa-heart" data-rating="5"></span>
            </div>
            <input id="rating-value" type="hidden" name="rating" class="rating-value" value=<%= rating %> >
        </div>

    </div>

</main>

<%- include('html-footer') %>