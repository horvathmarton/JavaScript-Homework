<%- include('html-header') %>

<%- include('header') %>

<%- include('alert') %>

<main>

    <h1 class="text-center text-secondary display-1 d-none d-md-block m-5"><%= recipie.name %></h1>
    <h1 class="text-center text-secondary d-block d-md-none m-5"><%= recipie.name %></h1>

    <div class="row m-0">

        <% if (authorized) { %>
            <div class="col-12 bg-dark text-light my-4 py-3 px-5">
                <div class="row text-center">
                    <div class="col-6">
                        <a class="btn btn-block btn-info rounded-0" href=<%= `/recipies/${recipie.id}/edit` %> >Edit</a>
                    </div>
                    <div class="col-6">
                        <a class="btn btn-block btn-danger rounded-0" href=<%= `/recipies/${recipie.id}/delete` %>>Delete</a>
                    </div>
                </div>
            </div>
        <% } %>

        <img class="img-fluid d-none d-md-block p-0" src="https://lorempixel.com/1920/480/food/9/">

        <div class="col-12 bg-dark text-light my-4 p-3">
            <div class="row text-center">
                <span class="col-6 h4"><%= `Elkészítési idő ${recipie.time} perc` %></span>
                <span class="col-6 h4"><%= `Nehézség: ${recipie.difficulty}/5` %></span>
            </div>
        </div>

        <div class="col-12 col-md-8 offset-0 offset-md-2 text-secondary my-4 p-3">
            <p><%= recipie.description %></p>
        </div>

        <%- include('rating') %>

    </div>

</main>

<%- include('html-footer') %>